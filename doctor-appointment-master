    "        # getting the number of appointments fixed to view in the log\n",
    "        sql2 = \"SELECT ID FROM appointments \"\n",
    "        self.result = c.execute(sql2)\n",
    "        for self.row in self.result:\n",
    "            self.id = self.row[0]\n",
    "            ids.append(self.id)\n",
    "        \n",
    "        # ordering the ids\n",
    "        self.new = sorted(ids)\n",
    "        self.final_id = self.new[len(ids)-1]\n",

